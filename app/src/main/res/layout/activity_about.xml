<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/global_include_toolbar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxLines="1"
        android:padding="@dimen/activity_vertical_margin"
        android:text="@string/app_about"
        android:visibility="gone" />

    <com.boger.game.gc.widget.Test.ScrollerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.boger.game.gc.widget.Test.ScrollerLayout>

    <com.boger.game.gc.widget.Test.BorderTextView
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:text="fsdfjsdlfjsdffsdfjsdlfjsdffsdfjsdlfjsdffsdfjsdlfjsdffsdfjsdlfjsdf" />


    <com.boger.game.gc.widget.Test.CircleProgress
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:visibility="gone" />


    <com.boger.game.gc.widget.StickyHeaderViewGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:text="button" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
    </com.boger.game.gc.widget.StickyHeaderViewGroup>
</LinearLayout>